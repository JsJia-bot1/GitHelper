<Page
    x:Class="GitHelper.Views.InitialPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:viewmodels="clr-namespace:GitHelper.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewmodels:InitialViewModel}"
    Style="{DynamicResource MahApps.Styles.Page}"
    Title="InitialPage">

    <StackPanel
        Width="400"
        HorizontalAlignment="Center"
        Orientation="Vertical">
        <TextBlock
            Margin="0, 20, 0 ,0"
            FontSize="10"
            Foreground="Red">
            *The tool will filter commits for past half year if the fix version not be provided.
        </TextBlock>
        <StackPanel Orientation="Horizontal">
            <TextBlock Margin="10" FontSize="15">Please input the fix version:</TextBlock>
            <TextBox
                Width="100"
                Height="20"
                Text="{Binding FixVersion, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
       
        <Button
            Width="200"
            Height="20"
            Margin="0, 10, 0 ,0"
            Command="{Binding OpenGitDirectoryCommand}"
            Content="Open a git directory" />
    </StackPanel>
</Page>