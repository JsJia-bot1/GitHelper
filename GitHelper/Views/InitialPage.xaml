<Page
    x:Class="GitHelper.Views.InitialPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:viewmodels="clr-namespace:GitHelper.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewmodels:InitialViewModel}"
    Style="{DynamicResource MahApps.Styles.Page}"
    Title="InitialPage">

    <Page.Resources>
        <!-- Styles for consistent UI elements -->
        <Style x:Key="TitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Margin" Value="0,20,0,10" />
        </Style>
        <Style x:Key="MessageStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Foreground" Value="DarkBlue" />
            <Setter Property="Margin" Value="0,0,0,10" />
            <Setter Property="TextWrapping" Value="Wrap" />
        </Style>
        <Style x:Key="LabelStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14" />
            <Setter Property="Margin" Value="0,0,10,0" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
        <Style x:Key="InputTextBoxStyle" TargetType="TextBox">
            <Setter Property="Width" Value="150" />
            <Setter Property="Height" Value="25" />
            <Setter Property="Padding" Value="5" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="BorderThickness" Value="1" />
        </Style>
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="200" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="FontSize" Value="14" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>
    </Page.Resources>

    <StackPanel
        Width="400"
        HorizontalAlignment="Center"
        Orientation="Vertical">
        <TextBlock Text="CherryPick Helper" Style="{StaticResource TitleStyle}" />
        <TextBlock Text="*The tool will filter commits for past half year if the fix version not be provided." 
                   Style="{StaticResource MessageStyle}" />
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Please input the fix version:" Style="{StaticResource LabelStyle}" />
            <TextBox Style="{StaticResource InputTextBoxStyle}" 
                     Text="{Binding FixVersion, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>

        <Button Content="Open a git directory" 
                Command="{Binding OpenGitDirectoryCommand}" 
                Style="{StaticResource ActionButtonStyle}" />
    </StackPanel>
</Page>