<Page
    x:Class="GitHelper.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:viewmodels="clr-namespace:GitHelper.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    Style="{DynamicResource MahApps.Styles.Page}"
    Title="MainPage">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!-- Top Information: Repo and Current Branch -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <TextBlock
                Grid.Column="0"
                Margin="5,0"
                FontSize="12">
                Repo:
            </TextBlock>
            <TextBlock
                Grid.Column="1"
                FontSize="12"
                Foreground="DarkRed"
                Text="{Binding RepoPath, UpdateSourceTrigger=PropertyChanged}" />
            <TextBlock
                Grid.Column="2"
                Margin="5,0"
                FontSize="12">
                Current Branch:
            </TextBlock>
            <TextBlock
                Grid.Column="3"
                FontSize="12"
                Foreground="DarkRed"
                Text="{Binding CurrentBranch, UpdateSourceTrigger=PropertyChanged}" />
        </Grid>
        <!-- Action Area: Operation Buttons -->
        <WrapPanel Grid.Row="1" Orientation="Horizontal">
            <Button
                Width="100"
                Height="30"
                Margin="5,0"
                Command="{Binding GoBackCommand}"
                Content="GoBack" />
            <TextBox
                Width="200"
                Height="30"
                Margin="5,0,0,0"
                BorderBrush="Gray"
                BorderThickness="1"
                metro:TextBoxHelper.Watermark="Enter the target branch..."
                Text="{Binding TargetBranch, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="100"
                Height="30"
                Margin="0,0,5,0"
                Command="{Binding CheckoutCommand}"
                Content="Checkout" />
            <Button
                Width="100"
                Height="30"
                Margin="5"
                Command="{Binding CherryPickCommand}"
                Content="CherryPick" />
        </WrapPanel>

        <WrapPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
            <TextBlock
                Margin="8,0,0,0"
                VerticalAlignment="Center"
                Text="Jira No:" />
            <metro:DropDownButton
                Width="362"
                Height="Auto"
                Margin="5,0"
                ItemsSource="{Binding JiraNos}">
                <metro:DropDownButton.Content>
                    <TextBlock
                        FontSize="10"
                        Foreground="Black"
                        Width="300"
                        Height="Auto"
                        TextWrapping="Wrap"
                        Text="{Binding SelectedJiraNosText}" />
                </metro:DropDownButton.Content>
                <metro:DropDownButton.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox
                                Command="{Binding CheckJiraNoCommand}"
                                CommandParameter="{Binding}"
                                Content="{Binding JiraNo}"
                                IsChecked="{Binding IsChecked, Mode=TwoWay}" />
                        </StackPanel>
                    </DataTemplate>
                </metro:DropDownButton.ItemTemplate>
            </metro:DropDownButton>

            <TextBox
                Width="153"
                Height="30"
                Margin="5,0,0,0"
                BorderBrush="Gray"
                BorderThickness="1"
                Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                metro:TextBoxHelper.Watermark="Enter the commit msg..."/>
            <Button
                Width="100"
                Height="30"
                Margin="0,0,5,0"
                Command="{Binding SearchCommand}"
                Content="Search" />

        </WrapPanel>

        <!-- Data Grid: Displaying Git Logs -->
        <ScrollViewer
            Grid.Row="3"
            Margin="0,10,0,0"
            HorizontalScrollBarVisibility="Auto"
            VerticalScrollBarVisibility="Auto">
            <DataGrid
                x:Name="dataGrid"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                AlternatingRowBackground="LightGray"
                AutoGenerateColumns="False"
                ItemsSource="{Binding DisplayedLogs}"
                RowHeight="25">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="50" MinWidth="100">

                        <!-- header checkbox -->
                        <DataGridTemplateColumn.Header>
                            <CheckBox
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                Checked="SelectAll_CheckBox_Checked"
                                Content="CHECKED"
                                Unchecked="SelectAll_CheckBox_Unchecked" />
                        </DataGridTemplateColumn.Header>

                        <!-- datagrid checkbox -->
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox HorizontalAlignment="Center" IsChecked="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged}" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn
                        Width="Auto"
                        MinWidth="150"
                        Binding="{Binding GitLog.Hash}"
                        Header="Hash" />
                    <DataGridTextColumn
                        Width="Auto"
                        MinWidth="150"
                        Binding="{Binding GitLog.Author}"
                        Header="Author" />
                    <DataGridTextColumn
                        Width="Auto"
                        MinWidth="150"
                        Binding="{Binding GitLog.CommitDate}"
                        Header="Date" />
                    <DataGridTextColumn
                        Width="Auto"
                        MinWidth="200"
                        Binding="{Binding GitLog.Description}"
                        Header="Description" />
                    <DataGridTextColumn
                        Width="Auto"
                        MinWidth="100"
                        Binding="{Binding JiraNo}"
                        Header="Jira No" />
                    <DataGridTextColumn
                        Width="Auto"
                        MinWidth="150"
                        Binding="{Binding Status}"
                        Header="Status" />
                </DataGrid.Columns>
            </DataGrid>
        </ScrollViewer>
    </Grid>
</Page>