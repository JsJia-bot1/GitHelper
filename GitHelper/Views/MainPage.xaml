<Page
    x:Class="GitHelper.Views.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:viewmodels="clr-namespace:GitHelper.ViewModels"
    mc:Ignorable="d"
    d:DataContext="{d:DesignInstance Type=viewmodels:MainViewModel}"
    Style="{DynamicResource MahApps.Styles.Page}"
    Title="MainPage">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Margin="0,5"
            Orientation="Horizontal">
            <TextBlock Margin="5,0" FontSize="10">Repo:</TextBlock>
            <TextBlock
                FontSize="10"
                Foreground="Red"
                Text="{Binding RepoPath, UpdateSourceTrigger=PropertyChanged}" />

            <TextBlock Margin="5,0" FontSize="10">Current Branch:</TextBlock>
            <TextBlock
                FontSize="10"
                Foreground="Red"
                Text="{Binding CurrentBranch, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <Button
                Width="75"
                Command="{Binding GoBackCommand}"
                Content="GoBack" />
            <Button
                Width="75"
                Margin="10,0,0,0"
                Command="{Binding CheckAllCommand}"
                Content="CheckAll" />

            <Button
                Width="75"
                Margin="10,0,0,0"
                Command="{Binding CheckoutCommand}"
                Content="Checkout" />
            <TextBox Width="50" Text="{Binding TargetBranch, UpdateSourceTrigger=PropertyChanged}" />

            <Button
                Width="75"
                Margin="10,0,0,0"
                Command="{Binding CherryPickCommand}"
                Content="CherryPick" />

            <metro:DropDownButton
                Margin="10,0,0,0"
                Width="75"
                Content="{Binding SelectedJiraNo, UpdateSourceTrigger=PropertyChanged}"
                ItemsSource="{Binding JiraNos}">
                <metro:DropDownButton.ItemContainerStyle>
                    <Style BasedOn="{StaticResource {x:Type MenuItem}}" TargetType="{x:Type MenuItem}">
                        <Setter Property="Command" Value="{Binding RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type metro:DropDownButton}}, Path=DataContext.SelectJiraNoCommand}" />
                        <Setter Property="CommandParameter" Value="{Binding}" />
                    </Style>
                </metro:DropDownButton.ItemContainerStyle>
            </metro:DropDownButton>

            <Button
                Width="75"
                Margin="10,0,0,0"
                Command="{Binding SearchCommand}"
                Content="Search" />
            <TextBox Width="100" Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <DataGrid
            x:Name="dataGrid"
            Grid.Row="2"
            Margin="0,10,0,0"
            AutoGenerateColumns="False"
            ItemsSource="{Binding DisplayedLogs}">
            <DataGrid.Columns>
                <DataGridTemplateColumn>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox HorizontalAlignment="Center" IsChecked="{Binding IsChecked, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding GitLog.Hash}"
                    Header="Hash" />

                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding GitLog.Author}"
                    Header="Author" />

                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding GitLog.CommitDate}"
                    Header="Date" />

                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding GitLog.Description}"
                    Header="Description" />

                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding JiraNo}"
                    Header="Jira No" />

                <DataGridTextColumn
                    Width="auto"
                    Binding="{Binding Status}"
                    Header="Status" />

            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</Page>